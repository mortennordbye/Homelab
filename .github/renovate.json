{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "kustomize": {
    "managerFilePatterns": [
      "/(^|/)kustomization\\.ya?ml(\\.j2)?$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.yaml$/"
      ],
      "matchStrings": [
        "(?<currentValue>[\\w+\\.\\-]*)['\",;]*\\s*#\\s?renovate: (?<datasource>\\S+)=(?<depName>\\S+)\\s?(registry=(?<registryUrl>\\S+))?\\s?(versioning=(?<versioning>\\S+))?"
      ]
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "linuxserver/qbittorrent"
      ],
      "matchFileNames": [
        "containers/compose/nodes/servarr/arr-stack/docker-compose.yaml"
      ],
      "enabled": false
    }
  ]
}
