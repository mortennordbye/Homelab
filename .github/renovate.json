{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":enablePreCommit"
  ],
  "timezone": "Europe/Oslo",
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/k8s/.*\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/k8s/.*/values\\.ya?ml$/"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "/k8s/.*/kustomization\\.ya?ml$/"
    ]
  },
  "terraform": {
    "managerFilePatterns": [
      "/terraform/.*\\.tf$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.ya?ml$/"
      ],
      "matchStrings": [
        "(?<currentValue>[\\w+\\.\\-]*)['\",;]*\\s*#\\s?renovate: (?<datasource>\\S+)=(?<depName>\\S+)\\s?(registry=(?<registryUrl>\\S+))?\\s?(versioning=(?<versioning>\\S+))?"
      ]
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions",
      "addLabels": [
        "dependencies",
        "github-actions"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "k8s/talos/apps/arr-stack/**"
      ],
      "groupName": "Arr Stack",
      "groupSlug": "arr-stack",
      "addLabels": [
        "dependencies",
        "arr-stack"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "k8s/talos/apps/plex-media-stack/**"
      ],
      "groupName": "Plex Media Stack",
      "groupSlug": "plex-stack",
      "addLabels": [
        "dependencies",
        "plex"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/mortennordbye/portfolio"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "major-update"
      ],
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchDatasources": [
        "docker"
      ],
      "automerge": false,
      "addLabels": [
        "minor-update"
      ]
    },
    {
      "matchManagers": [
        "terraform"
      ],
      "addLabels": [
        "terraform"
      ],
      "groupName": "Terraform"
    }
  ]
}
